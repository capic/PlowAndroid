<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip"
    android:id="@+id/downloadLayout">

    <!--<ImageView-->
        <!--android:id="@+id/icon"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="fill_parent"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_marginRight="6dip"-->
        <!--android:contentDescription="TODO"-->
        <!--android:src="@drawable/ic_launcher" />-->

    <TextView
        android:id="@+id/downloadLink"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Description"
        android:textSize="12sp" />
    <!--android:layout_toRightOf="@id/icon"-->
    <TextView
        android:id="@+id/downloadName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/downloadLink"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"

        android:gravity="center_vertical"
        android:text="Example application"
        android:textSize="16sp"
        android:singleLine="true"
        android:layout_toStartOf="@+id/downloadPercent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/downloadName"
        android:layout_alignEnd="@+id/downloadLink"
        android:layout_above="@+id/downloadLink" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="percent"
        android:id="@+id/downloadPercent"
        android:layout_alignTop="@+id/downloadName"
        android:layout_toStartOf="@+id/textView2"
        android:layout_above="@+id/downloadLink" />


    <!--android:layout_toRightOf="@id/icon"-->
</RelativeLayout> 